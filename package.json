{
    "name": "vale-lang",
    "displayName": "Vale",
    "description": "Syntax highlighting for Vale Language",
    "version": "0.1.1",
    "engines": {
        "vscode": "^1.48.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "icon": "images/logo.png",
    "repository": "https://github.com/Ivo-Balbaert/vscode-vale",
    "publisher": "Ivo-Balbaert",
    "contributes": {
        "languages": [
            {
                "id": "Vale",
                "aliases": [
                    "Vale",
                    "vale"
                ],
                "extensions": [
                    ".vale"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "Vale",
                "scopeName": "source.vale",
                "path": "./syntaxes/vale.tmLanguage.json"
            }
        ]
    }
}